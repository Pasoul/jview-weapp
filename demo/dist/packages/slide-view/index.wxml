<movable-area class="custom-class van-slide-view" style="width: {{width}}rpx; height: {{height}}rpx;">
  <movable-view direction="horizontal" class="van-slide__movable" out-of-bounds="{{out}}" damping="20" x="{{x}}" style="width: {{width + slideWidth}}rpx; height: {{height}}rpx;" inertia bindtouchend="onTouchEnd" bindtouchstart="onTouchStart" bindchange="onChange">
    <view class="left">
      <slot name="left"></slot>
    </view>
    <view class="right">
      <slot name="right"></slot>
    </view>
  </movable-view>
</movable-area>