.van-upload{
  padding-top: 10px;
}
.van-upload_btn--default{
  margin: 10px 0;
}
.van-upload_switch{
  margin-top: 10px;
}
.van-upload-slot_wrapper{
  width: 264px;
  height: 200px;
  background-color: #fff;
  border-radius: 2px;
  margin: 20px auto;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.van-upload-slot_btn{
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  align-items: center;
  position: relative;
  z-index: 99;
}
.van-upload-slot_btn_add{
  width: 50px;
  height: 50px;
  margin-bottom: 20px;
  font-size: 32px;
  font-style: normal;
  color: #fff;
  background-color: #333;
  border-radius: 50%;
  text-align:center;
}
.van-upload-slot_file{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
}
.van-upload-slot_image{
  width: 100%;
  height: 100%;
}